<div class="location-index-background">
  <div class="container">
    <div class="row">
      <div class="cu-forecast">
        <h4 class="center-align main-text">current forecast</h4> 
          <div class="col s4 cu-left">
            <%= dt(@current["dt"]) %>
            <h1><%= @location[0].capitalize %></h1>
            <h3><%= @current["temp"] %>&deg;C</h3>
            <h6><%= @current["feels_like"]%>&deg;C</h6>
          </div>

          <div class="col s5 cu-middle">
            <span class="sun"><i class="material-icons sun-i">wb_sunny</i> <%= sun(@current["sunrise"]) %></span>
            <span class="sun"><i class="material-icons sun-i">brightness_3</i> <%= sun(@current["sunset"]) %></span></br>
            <span class="wind">wind speed: <%= @current["wind_speed"]%>m/s</span></br>
            <span class="wind">wind degress:<%= @current["wind_deg"]%></span></br>
            <span class="info">pressure: <%= @current["pressure"] %>hPa</span></br>
            <span class="info">humidity: <%= @current["humidity"] %>%</span>
          </div>
          <div class="col s3 cu-right">
            <% @current["weather"].each do |weather| %>
              <img src=<%=image(weather["icon"], "@4x")%>>
              <p class="centered"><%= weather["description"].upcase %></p>
            <% end %></br>
          </div>
          <p>.</p>
      </div>
    </div>
    <div class="row">
      <div class="td-forecast">
        <h4 class="center-align main-text">today's forecast</h4>
        <%#= @today %>
      </div>
    </div>
    <div class="row">
      <div class="wk-forecast">
        <h4 class="center-align main-text">weekly forecast</h4>
        <% @week.each do |day| %>
          <div class="week-col">
            <h6 class="week-date"><%= dt(day["dt"]) %></h6></br>

            <span><%= sun(day["sunrise"]) %></span>
            <span><%= sun(day["sunset"]) %></span></br>
            
            <% day["weather"].each do |w| %>
              <img src=<%= image(w["icon"], "@2x") %>>
            <% end %>

            <span>temperature</span>
            <% day["temp"].each do |t| %>
              <p class="temp"><%= t[0] %> <%= t[1] %></p>
            <% end %>

            <span>pressure</span>
            <%= day["pressure"] %>
            
            <span>humidity</span>
            <%= day["humidity"] %>
            
            <span>wind speed</span>
            <%= day["wind_speed"] %>
            
            <span>wind deg</span>
            <%= day["wind_def=g"] %>

          </div>
        <% end %>
        <p>.</p>
      </div>
    </div>
  </div>
</div>